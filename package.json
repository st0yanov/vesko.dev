{
  "name": "vesko.dev",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "export": "next export",
    "clean": "rimraf .next out",
    "generate-sitemap": "node next-sitemap-generator.js",
    "skip-prod-admin": "rimraf out/admin",
    "export-prod": "run-s clean build generate-sitemap export skip-prod-admin",
    "deploy-nojekyll": "touch out/.nojekyll",
    "deploy-cname": "echo \"www.vesko.dev\" > out/CNAME",
    "deploy-publish": "gh-pages --dist out --dotfiles --message \"Automatic deploy commit\" --user \"Deploy Bot <me@vesko.dev>\"",
    "deploy": "run-s export-prod deploy-nojekyll deploy-cname deploy-publish",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ."
  },
  "dependencies": {
    "@babel/core": "^7.12.3",
    "@fortawesome/fontawesome-svg-core": "^1.2.32",
    "@fortawesome/free-brands-svg-icons": "^5.15.1",
    "@fortawesome/free-solid-svg-icons": "^5.15.1",
    "@fortawesome/react-fontawesome": "^0.1.12",
    "@mapbox/rehype-prism": "^0.5.0",
    "@mdx-js/react": "^1.6.21",
    "@zeit/next-sass": "^1.0.1",
    "date-fns": "^2.16.1",
    "global": "^4.4.0",
    "gray-matter": "^4.0.2",
    "klaro": "^0.7.5",
    "next": "^10.0.1",
    "next-mdx-remote": "^1.0.0",
    "next-seo": "^4.15.1",
    "node-sass": "^7.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "reading-time": "^1.2.0",
    "styled-jsx-plugin-postcss": "^3.0.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^10.0.1",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.56",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "gh-pages": "^3.1.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.5.1",
    "nextjs-sitemap-generator": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "tailwindcss": "^1.9.6",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
